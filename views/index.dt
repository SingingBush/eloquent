extends layout

block body
	.row
		.col-md-12
			- foreach( p; blogPosts )
				h2 #{p.title}
				p.lead #{p.author.displayname}
				p
					span.glyphicon.glyphicon-time
					| #{p.created}
				hr
				p !{p.content}
				a.btn.btn-primary(href="#") Read More
					span.glyphicon.glyphicon-chevron-right
				hr