extends layout

block title
	title Home

block body
	.jumbotron.jumbotron-primary
		.container
			h1& home.welcome-message

	.container(role='main')
		.row
			.col-md-12
				- foreach( p; blogPosts )
					h2 #{p.title}
					p.lead #{p.author.displayname}
					p
						span.fa.fa-clock-o
						| #{p.created}
					hr
					p !{p.content}
					a.btn.btn-primary(href="#")& txt.read-more
						span.fa.fa-chevron-right
					hr