{
	"name": "eloquent",
	"description": "Eloquent is a blogging application written in D.",
	"copyright": "Copyright Â© 2015, Samael",
	"authors": ["Samael"],
	"homepage": "http://singingbush.com",
	"license": "GPL-2.0",
	"dependencies": {
		"proper-d": "~>0.0.2",
		"consoled": "~>1.0.4",
		"vibe-d": "~>0.7.30-alpha.4",
		"poodinis": "~>6.3.0",
		"hibernated": "~>0.2.26",
		"ddbc": "0.2.24"
	},
	"targetType": "executable",
	"buildRequirements": [
		"allowWarnings"
	],
	"preGenerateCommands": [
		"if ! type \"npm\" > /dev/null; then echo -e \"You need to have Node.js and npm installed in order to build this project\nvisit https://nodejs.org for more info\"; exit 1; fi",
		"if ! type \"bower\" > /dev/null; then echo -e \"You need to have Bower installed in order to build this project\n run \"npm install -g bower\" to install it using the Node Package Manager\nvisit http://bower.io/ for more info\"; exit 1; fi",
		"printf \"\\033[94mInstalling Bower components...\\033[0m\n\"",
		"bower install",
		"mkdir -p ./public/js ./public/css ./public/fonts",
		"rsync -u bower_components/jquery/dist/jquery.min.js ./public/js/jquery.min.js",
		"rsync -u bower_components/tether/dist/js/tether.min.js ./public/js/tether.min.js",
		"rsync -u bower_components/bootstrap/dist/css/bootstrap.min.css ./public/css/bootstrap.min.css",
		"rsync -u bower_components/bootstrap/dist/js/bootstrap.min.js ./public/js/bootstrap.min.js",
		"rsync -u bower_components/font-awesome/css/font-awesome.min.css ./public/css/font-awesome.min.css",
		"rsync -u bower_components/font-awesome/fonts/fontawesome-webfont.* ./public/fonts/",
		"echo client-side dependencies done."
	],
	"preBuildCommands": ["printf \"\\033[93mtodo\\033[0m get SASS compiler working as part of build\n\""],
	"configurations": [
		{
			"name": "default",
			"versions": ["PRODUCTION", "USE_MYSQL", "USE_SQLITE", "USE_PGSQL"],
			"subConfigurations": {
				"vibe-d:core": "libevent",
				"hibernated": "full",
				"ddbc": "full"
			},
			"buildRequirements": ["silenceWarnings"]
		},
		{
			"name": "mysql",
			"versions": ["PRODUCTION", "USE_MYSQL"],
			"subConfigurations": {
				"vibe-d:core": "libevent",
				"hibernated": "MySQL",
				"ddbc": "MySQL"
			},
			"buildRequirements": ["silenceWarnings"]
		},
		{
			"name": "unittest",
			"versions": ["DEVELOPMENT", "USE_SQLITE"],
			"libs-posix": ["sqlite3"],
			"libs-windows": ["sqlite3"],
			"subConfigurations": {
				"hibernated": "SQLite",
				"ddbc": "SQLite"
			},
			"buildRequirements": ["silenceWarnings", "silenceDeprecations"]
		}
	],
	"versions": ["VibeDefaultMain", "Have_vibe_d"]
}
